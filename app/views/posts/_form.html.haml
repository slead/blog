.content
  = simple_form_for(@post, html: { class: 'form' })  do |f|
    .form-group
      =f.input :title,  input_html: { class: 'form-control' }, placeholder: "Enter the post's title"
      =f.input :content, input_html: { class: 'form-control', rows: 15 }, placeholder: 'Enter the post content'
    =f.submit class: "btn btn-warning"