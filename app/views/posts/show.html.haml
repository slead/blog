.container
  .row.top-50
    .col-lg-8.col-lg-offset-2
      .content.single_post
        %h4.title= @post.title
        %p= markdown @post.content

      = link_to posts_path, class: "btn" do
        %i.fa.fa-angle-double-left.highlight
        Back to articles

        - if user_signed_in? && @post.user_id == current_user.id
          #me
            = link_to edit_post_path(@post), class: "light btn-edit" do
              %i.fa.fa-pencil-square-o
            = link_to post_path(@post), method: :delete, class: "light btn-delete", data: {confirm: "Are you sure you want to delete this post?"} do
              %i.fa.fa-times