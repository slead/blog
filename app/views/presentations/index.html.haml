.container.top-50
  - @presentations.each do |presentation|
    .row
      .col-lg-8.col-lg-offset-2
        .presentation.content
          %h4.title= link_to presentation.title, presentation
          %span.date
            = time_ago_in_words(presentation.created_at)
            ago
          .content
            %p= presentation.description
            %iframe{:src => presentation.url, :width => "560", :height => "315"}
          %hr

- if user_signed_in?
  #me
    = link_to destroy_user_session_path, method: :delete, class: "light btn-user" do
      %i.fa.fa-user
    = link_to new_presentation_path, class: "light btn-edit" do
      %i.fa.fa-pencil-square-o