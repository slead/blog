.content
  = simple_form_for(@presentation, html: { class: 'form' })  do |f|
    .form-group
      =f.input :title,  input_html: { class: 'form-control' }, placeholder: "Enter the presentation's title"
      =f.input :description, input_html: { class: 'form-control', rows: 15 }, placeholder: 'Enter the presentation description'
      =f.input :url,  input_html: { class: 'form-control' }, placeholder: "Enter the presentation's video URL"
    =f.submit class: "btn btn-warning"