!!!
%html
%head
  %title Unicasts Blog
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body

  .notifications
  - if notice
    #notice_wrapper
      %p.alert.alert-dismissable= notice
      %span.close{type: "button", data: {dismiss:"alert"}}
        %i.fa.fa-times
  - elsif alert
    #alert_wrapper
      %p.alert.alert-dismissable= alert
      %span.close{type: "button", data: {dismiss:"alert"}}
        %i.fa.fa-times
              
  = yield
