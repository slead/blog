.container.index
  - @projects.each do |project|
    .row
      .col-lg-6-col-lg-offset-4
        .project.content
          %h4= link_to project.title, project
          %span.date
            = time_ago_in_words(project.created_at)
            ago
          .content
            %p= truncate(project.description, length: 150)
            %p.readmore= link_to "Read more", project
          %hr

- if user_signed_in?
  #me
    = link_to destroy_user_session_path, method: :delete, class: "light btn-user" do
      %i.fa.fa-user
    = link_to new_project_path, class: "light btn-edit" do
      %i.fa.fa-pencil-square-o