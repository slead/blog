.content
  = simple_form_for(@project, html: { class: 'form' })  do |f|
    .form-group
      =f.input :title,  input_html: { class: 'form-control' }, placeholder: "Enter the project's title"
      =f.input :description, input_html: { class: 'form-control', rows: 15 }, placeholder: 'Enter the description'
      = f.input :image, as: :file
      =f.input :url, input_html: { class: 'form-control'}, placeholder: 'URL to the project'
    =f.submit class: "btn btn-warning"